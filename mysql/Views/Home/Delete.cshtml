@{ ViewData["Title"] = "Delete Bowler"; }

@model Bowler

<div class="text-center">
    <h1>Delete @Model.BowlerLastName, @Model.BowlerFirstName?</h1>
    <form method="post" asp-action="Delete">
        <input asp-for="BowlerID" type="hidden" />
        <button class="btn btn-danger btn-large" type="submit">Delete</button>
        <br />
        <a asp-controller="Home" asp-action="Index" class="btn btn-large btn-primary">Cancel</a>
    </form>
</div>